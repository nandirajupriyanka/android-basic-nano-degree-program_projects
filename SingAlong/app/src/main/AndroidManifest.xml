<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.priyankanandiraju.singalong">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchSongActivity"
            android:label="@string/search_for_song" />
        <activity
            android:name=".UploadAudioActivity"
            android:label="@string/upload_audio" />
        <activity
            android:name=".RecordAudioActivity"
            android:label="@string/record_audio" />
    </application>

</manifest>